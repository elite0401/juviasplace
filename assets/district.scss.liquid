  }

  .row {
    @include grid();
    margin-bottom: $gridGutter;

    &.row-2 {
      .box {
        @include grid-item(6);
      }
    }

    &.row-3 {
      .box {
        @include grid-item(3);
      }
    }
    &.row-4 {
      .box {
        @include grid-item(3);
      }
    }

    &:last-of-type {
      margin-bottom: 0px;
    }

    @include mediaQuery($max, $largeMobile) {
      margin-bottom: 0;
      &.row-2,
      &.row-3 {
        .box {
          @include grid-item();
          margin-bottom: 20px;
        }
      }
    }
  }

  .box {

    a {
      display: block;
      background-size: contain;
      background-position: center center;
    }
    figure {
      position: relative;
      display: block;
      overflow: hidden;
      max-width: 575px;
      margin: 0 auto;

      img {
        {% if settings.homepage_featured_grid_label == 'over' %}
          @include transition(all 2.0s ease-in-out);
        {% else %}
          @include transition(all 0.5s ease-out);
        {% endif %}
        display: block;
        max-width: 100%;
        height: auto;
        margin: 0 auto;
      }

      &:after {
        @include transition(background-color 0.5s ease-out);
        content: '';
        background: transparent;
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        z-index: 10;
      }

      figcaption {
        position: absolute;
        top: 50%;
        @include transform(translateY(-50%));
        width: 100%;
        text-align: center;
        z-index: 20;

        h4 {
          margin: 0 auto;
          display: inline-block;
          color: $primaryTextOnAccentColor;
